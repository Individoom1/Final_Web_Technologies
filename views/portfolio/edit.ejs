<%- include('../partials/header') %>
<h1>Edit Portfolio Item</h1>
<form action="/portfolio/edit/<%= item._id %>" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= item.title %>" required>
  
  <label for="description">Description:</label>
  <textarea id="description" name="description" required><%= item.description %></textarea>
  
  <label for="images">Images (comma-separated URLs):</label>
  <input type="text" id="images" name="images" value="<%= item.images.join(', ') %>" required>
  
  <button type="submit">Update</button>
</form>
<%- include('../partials/footer') %>
