<%- include('../partials/header') %>
<div class="container mt-5">
  <h1 class="text-center">Portfolio</h1>
  <a href="/portfolio/create" class="btn btn-success mb-4">Add New Item</a>
  <div class="row">
    <% items.forEach(item => { %>
      <div class="col-md-4 mb-4">
        <div class="card shadow">
          <div id="carousel<%= item._id %>" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <% item.images.forEach((image, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <img src="<%= image %>" class="d-block w-100 rounded" alt="<%= item.title %>">
                </div>
              <% }) %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= item._id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= item._id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text"><%= item.description %></p>
            <a href="/portfolio/edit/<%= item._id %>" class="btn btn-primary btn-sm">Edit</a>
            <form action="/portfolio/delete/<%= item._id %>" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<%- include('../partials/footer') %>
